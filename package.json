{
  "name": "difflicious",
  "version": "1.0.0",
  "description": "A sleek web-based git diff visualization tool",
  "scripts": {
    "lint:js": "eslint src/difflicious/static/js/**/*.js",
    "lint:js:fix": "eslint src/difflicious/static/js/**/*.js --fix",
    "test:js": "jest",
    "test:js:watch": "jest --watch",
    "test:js:coverage": "jest --coverage"
  },
  "devDependencies": {
    "eslint": "^8.57.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-n": "^16.6.2",
    "eslint-plugin-promise": "^6.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/js/**/*.test.js",
      "**/tests/js/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/difflicious/static/js/**/*.js"
    ]
  },
  "eslintConfig": {
    "extends": "standard",
    "env": {
      "browser": true,
      "es2021": true
    },
    "globals": {
      "hljs": "readonly",
      "Alpine": "readonly"
    },
    "rules": {
      "indent": [
        "error",
        4
      ],
      "semi": [
        "error",
        "always"
      ],
      "space-before-function-paren": [
        "error",
        "never"
      ],
      "quote-props": "off"
    }
  }
}
